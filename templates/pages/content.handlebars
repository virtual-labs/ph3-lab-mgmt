<!DOCTYPE html>
<html lang="en">
  <head>
    {{> analytics_head }}
    {{> meta }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/virtual-labs/virtual-style@0.0.6-b/css/style.min.css">
    {{> commons }}
    <style>
      h1 {
      font-size: 1.8rem;
      }
      h2 {
      font-size: 1.4rem;
      }
      h3 {
      font-size: 1.2rem;
      }

      h2, h3 {
      font-weight: 800;
      }
    </style>
  </head>
  <body class="p-0 container-fluid vlabs-page d-flex flex-column justify-content-between">
    {{> analytics_body }}
    {{> header }}
    <div class="container-fluid flex-fill d-flex flex-column vlabs-page-main">
      {{> breadcrumbs }}
      {{#if testing}}
      	{{> performance_breadcrumbs }}
      {{/if}}
      <div class="row flex-grow-1 d-flex flex-nowrap flex-column flex-lg-row">
        {{> side_menu }}
        {{> content }}
      </div>
    </div>
    {{> footer }}
    {{#if isSimulation}}
      <script>

      window.onmessage = (e) => {
        if (e.data.hasOwnProperty("frameHeight")) {
          updateSize(e.data.frameHeight);
        }
      };

      function updateSize(s){
        const iframeDiv = $("div.simulation-container");
        const current_padding = parseFloat(iframeDiv.css("padding-top"), 10);

        if (current_padding < s) {
          {{!-- iframeDiv.css("padding-top", (s + 200)); --}}
          iframeDiv.css("padding-top", (s));
        }
      }

      function iframeResize() {
        let doc = $("iframe").contents()[0];
        let bodyHeight = Math.max(doc.scrollingElement.scrollHeight, doc.body.scrollHeight);
        console.log(bodyHeight);
        updateSize(bodyHeight);
      }

      $("iframe").on("load", iframeResize);
      window.onresize = iframeResize;

      </script>
      {{/if}}

      <script src="{{assets_path}}/assets/js/toggleSidebar.js"></script>
      
  </body>
</html>
